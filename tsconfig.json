{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "types" : ["csstype"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}